---
layout: default
---

<div class="space-y-24 pt-1">
  <div class="flex flex-col gap-y-5">
    <span class="prose text-lg">
      {{ about.bio | markdown | safe }}
    </span>
    <div class="flex gap-x-2">
        <a href="{{ metadata.links.github }}">
          {% icon "github" %}
        </a>
        <a href="{{ metadata.links.twitter }}">
          {% icon "twitter" %}
        </a>
        <a href="{{ metadata.links.mailto }}">
          {% icon "email" %}
        </a>
    </div>
  </div>
  <ul class="flex flex-col gap-y-12">
    {% for year, posts in collections.postsByYear %}
    <li class="flex flex-col divide-y">
        <h1 class="text-2xl font-bold pb-4">
            {{ year }}
        </h1>
        <ul class="flex flex-col pt-8 gap-y-2">
          {% for post in posts %}
            <li class="text-lg text-gray-700">
              <a href="{{ post.url }}" class="hover:underline">{{ post.data.title }}</a>
            </li>
          {% endfor %}
        </ul>
    </li>
    {% endfor %}
  </ul>
</div>
