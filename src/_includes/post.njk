---
layout: default
---
<article class="space-y-24">
    <div class="flex flex-col gap-y-5">
        <h1 class="text-4xl font-bold">{{ title }}</h1>
        <div class="flex gap-x-2 text-gray-400">
            <div class="flex gap-x-1">
                {% if lastmod %}
                    {% set date = lastmod %}
                {% endif %}
                Last updated:
                <span class="italic">
                    {{ date | postDate }}
                </span>
            </div>
            &bull;
            <div class="flex gap-x-1">
                <span>
                    {{ content | timeToRead }}
                </span>
                read
            </div>
        </div>
    </div>
    <div class="prose">
        {{ content | safe }}
    </div>
</article>
