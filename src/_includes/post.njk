---
layout: default
---

<article>
    <h1 class="text-2xl font-bold">{{ title }}</h1>
    <div class="flex gap-x-2 pt-1 pb-10 text-gray-400">
        <div class="flex gap-x-1">
            {% if lastmod %}
                {% set date = lastmod %}
            {% endif %}
            Last updated:
            <span class="italic">
                {{ date | postDate }}
            </span>
        </div>
        &bull;
        <div class="flex gap-x-1">
            Read in:
            <span class="italic">
                {{ content | timeToRead }}
            </span>
        </div>
    </div>
    <div class="prose">
        {{ content | safe }}
    </div>
</article>
